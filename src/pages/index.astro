---
import Layout from "../layouts/Layout.astro";
import { boards } from "../constants";
---

<Layout>
  <h2>おすすめのスノーボード</h2>
  <ul>
    {
      boards.map((board) => (
        <li>
          <a href={`/boards/${board.name}`}>
            <p
              transition:name={`brand-${board.brand}-${board.name}`}
              transition:animate="slide"
            >
              {board.brand}{" "}
            </p>
            <p
              transition:name={`name-${board.name}`}
              transition:animate="slide"
            >
              {board.name}
            </p>
            <img src={board.img} transition:name={`img-${board.name}`} />
          </a>
        </li>
      ))
    }
  </ul>
</Layout>
<style>
  h2 {
    text-align: center;
    font-weight: bold;
  }
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    list-style: none;
    gap: 24px;
    margin: 0;
    padding: 0;
  }
  li {
    display: flex;
    justify-content: center;
  }
  a {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 12px;
    width: 300px;
    height: 300px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    border-radius: 10px;
    border: 1px solid #ccc;
    color: black;
  }
  p {
    margin: 0;
    text-align: center;
  }
  img {
    width: 200px;
    height: 200px;
    object-fit: contain;
  }
</style>
